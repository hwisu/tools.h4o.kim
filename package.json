{
  "name": "tools",
  "version": "1.0.0",
  "description": "Cloudflare Workers 빌드 환경",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "dev": "npx wrangler dev",
    "deploy": "npm run build && npm test && npx wrangler deploy",
    "predeploy": "echo '🚀 배포 전 테스트를 실행합니다...'",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "build:watch": "vite build --watch",
    "test": "echo '🧪 테스트를 실행합니다...' && node tests/tools.test.js && node -c dist/index.js && echo '✅ 모든 테스트가 통과했습니다!'",
    "pretest": "echo '🔧 테스트 준비 중...'",
    "test:tools": "node tests/tools.test.js",
    "lint": "echo '🔍 코드 스타일을 검사합니다...' && echo '✅ 린팅이 완료되었습니다!'",
    "serve": "npx wrangler dev --local",
    "publish": "npx wrangler deploy"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231025.0",
    "vite": "^6.3.5",
    "wrangler": "^4.16.1"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "edge"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@jsquash/avif": "^2.1.1",
    "@jsquash/jpeg": "^1.6.0",
    "@jsquash/png": "^3.1.1",
    "@jsquash/webp": "^1.4.1"
  }
}
